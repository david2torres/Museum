{
  "name": "sim",
  "version": "1.0.44",
  "scripts": {
    "ng": "ng",
    "start": "ng serve --port 4200 --live-reload true --serve-path",
    "build": "ng build --configuration production --output-hashing none --source-map --aot",
    "watch": "ng build --watch --configuration development",
    "commit": "ng lint --fix && git add . && cz",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint . --quiet"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^18.0.0",
    "@angular/common": "^18.0.0",
    "@angular/compiler": "^18.0.0",
    "@angular/core": "^18.0.0",
    "@angular/forms": "^18.0.0",
    "@angular/platform-browser": "^18.0.0",
    "@angular/platform-browser-dynamic": "^18.0.0",
    "@angular/platform-server": "^18.0.0",
    "@angular/router": "^18.0.0",
    "@ngrx/store": "^18.0.2",
    "@ngrx/store-devtools": "^18.0.2",
    "@ngx-translate/core": "^15.0.0",
    "@ngx-translate/http-loader": "^8.0.0",
    "crypto-js": "^4.2.0",
    "express": "^4.18.2",
    "file-saver": "^2.0.5",
    "jest-canvas-mock": "^2.5.2",
    "ngx-translate-cut": "^18.0.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "xlsx": "^0.18.5",
    "zone.js": "~0.14.3"
  },
  "devDependencies": {
    "@angular-builders/jest": "^18.0.0",
    "@angular-devkit/build-angular": "^18.0.6",
    "@angular-eslint/builder": "^18.0.1",
    "@angular-eslint/eslint-plugin": "^18.0.1",
    "@angular-eslint/eslint-plugin-template": "^18.0.1",
    "@angular-eslint/schematics": "^18.0.1",
    "@angular-eslint/template-parser": "^18.0.1",
    "@angular/cli": "^18.0.0",
    "@angular/compiler-cli": "^18.0.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.12",
    "@types/node": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.14.1",
    "angular-eslint": "18.0.1",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.6.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsdoc": "^48.5.0",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "jest-preset-angular": "^14.1.0",
    "lint-staged": "^15.2.7",
    "prettier": "^3.3.2",
    "ts-jest": "^29.1.5",
    "typescript": "~5.4.2",
    "typescript-eslint": "8.0.0-alpha.20"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog",
      "disableScopeLowerCase": false,
      "disableSubjectLowerCase": false,
      "types": {
        "feature": {
          "description": "A new feature",
          "title": "feature"
        },
        "bugfix": {
          "description": "A bug fix",
          "title": "bugfix"
        },
        "hotfix": {
          "description": "A hot fix, one o more bugfixes to master",
          "title": "hotfix"
        },
        "improvement": {
          "description": "A code change that improves performance or an enhancement",
          "title": "improvement"
        },
        "refactor": {
          "description": "A code change that neither fixes a bug or adds a feature, it's just a code improvement in readability or complexity",
          "title": "refactor"
        },
        "test": {
          "description": "Add missing test",
          "title": "test"
        },
        "docs": {
          "description": "Add only documentation changes",
          "title": "docs"
        },
        "style": {
          "description": "Changes that do not affect the meaning of the code (white-space, formatting, missing semi-colons, etc)",
          "title": "style"
        },
        "chore": {
          "description": "Changes to the build process or auxiliary tools and libraries, or changes of architecture",
          "title": "chore"
        },
        "update": {
          "description": "Use when merge with another branch",
          "title": "update"
        }
      }
    }
  }
}
